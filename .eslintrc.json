{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "react",
    "prettier",
    "react-hooks"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          "jsx"
        ]
      }
    ],
    "prettier/prettier": "warn",
    "react-hooks/rules-of-hooks": "error",
    "import/prefer-default-export": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "no-unused-vars": "warn",
    "max-len": [
      "warn",
      100
    ]
  },
  "env": {
    "browser": true
  },
  "settings": {
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  }
}
